class Worker:
    def __init__(self, name, surname, rate, days):
        self.__name = name
        self.__surname = surname
        self.__rate = rate
        self.__days = days

    def get_name(self):
        return self.__name

    def get_surname(self):
        return self.__surname

    def get_rate(self):
        return self.__rate

    def get_days(self):
        return self.__days

    def get_salary(self):
        salary = self.__rate * self.__days
        print(f'Salary: {self.__name} {self.__surname} == {salary}')


First_Worker = Worker("Anton", "Dushev", 340, 54)
Second_Worker = Worker("Nicolay", "Donskoy", 443, 43)

First_Worker.get_salary()
Second_Worker.get_salary()

print(f"Name of the first worker: {First_Worker.get_name()}")

